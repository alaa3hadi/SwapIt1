<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:backgroundTint="#F8F8F8"
    card_view:cardCornerRadius="12dp"
    card_view:cardElevation="4dp"
    android:layoutDirection="rtl">

    <LinearLayout
        android:layout_width="258dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
      >

        <!-- الصورة -->


        <ImageView
            android:id="@+id/areaImage"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:contentDescription="@drawable/flour"
            android:background="@drawable/rounded_corners" />

        <!-- اسم المنتج + وقت النشر -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="8dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:gravity="center_vertical"
            android:layoutDirection="rtl"
            android:orientation="horizontal"
            android:paddingTop="2dp"
            android:paddingRight="2dp"
            android:paddingLeft="2dp">

            <TextView
                android:id="@+id/itemTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="2 كيلو سكر"
                android:textColor="@color/blackDark"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/itemTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="منذ ساعة"
                android:textColor="@color/black"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- للبدل على -->
        <TextView
            android:id="@+id/itemExchange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="للتبديل على: طحين"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:paddingTop="2dp"
            android:paddingRight="2dp"
            android:paddingLeft="2dp"/>

        <!-- الموقع -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingTop="2dp"
            android:paddingRight="2dp"
            android:paddingLeft="2dp">

            <ImageView
                android:layout_width="8dp"
                android:layout_height="5dp"
                android:layout_marginEnd="4dp"
                android:src="@drawable/location" />

            <TextView
                android:id="@+id/itemLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="غزة - الرمال"
                android:textColor="@color/YellowDark"
                android:textSize="12sp" />
        </LinearLayout>

        </LinearLayout>
        <!-- الإيميل -->

        <!-- رقم الهاتف -->

    </LinearLayout>
</androidx.cardview.widget.CardView>
