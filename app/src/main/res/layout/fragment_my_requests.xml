<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- شيمر تحميل -->
    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/shimmerLayoutReq"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:shimmer_auto_start="true"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <View
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/skeleton_bg" />

            <View
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/skeleton_bg" />

            <View
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@drawable/skeleton_bg" />
        </LinearLayout>
    </com.facebook.shimmer.ShimmerFrameLayout>

    <ListView
        android:id="@+id/cardListViewRequest"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:paddingTop="14dp"
        android:paddingBottom="8dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:divider="@android:color/transparent"
        android:dividerHeight="16dp"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/emptyLayoutReq"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone"
        android:padding="16dp">

        <ImageView
            android:id="@+id/emptyImageReq"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:src="@drawable/swapit2"
            android:layout_marginBottom="24dp"
            android:contentDescription="صورة توضيحية" />

        <TextView
            android:id="@+id/emptyMessageReq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="لم تقم بإرسال أي طلب حتى الآن."
            android:textSize="22sp"
            android:layout_marginTop="10dp"
            android:textColor="@color/blackDark"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/ButtonReq"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="تصفح العروض"
            android:textSize="16sp"
            android:backgroundTint="@color/YellowDark"
            app:cornerRadius="20dp"
            android:textColor="@android:color/black"/>
    </LinearLayout>
</RelativeLayout>