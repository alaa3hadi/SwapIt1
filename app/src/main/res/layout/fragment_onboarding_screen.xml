<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/onboardingRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/image1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:contentDescription="Onboarding background"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/onboarding_screen1"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="visible"
        />

    <ImageView
        android:id="@+id/image2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:contentDescription="Onboarding background"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/onboarding_screen2"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="gone"
        />

    <ImageView
        android:id="@+id/image3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:contentDescription="Onboarding background"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/onboarding_screen3"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="gone"
        />



    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnStart"
        android:layout_width="165dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="52dp"
        android:background="@drawable/rounded_button"
        android:elevation="6dp"
        android:paddingHorizontal="32dp"
        android:paddingVertical="12dp"
        android:text="ابدأ الآن"
        android:textColor="#1B3A66"
        android:textSize="18sp"
        android:visibility="visible"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.565"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_goneMarginBottom="98dp" />

</androidx.constraintlayout.widget.ConstraintLayout>


