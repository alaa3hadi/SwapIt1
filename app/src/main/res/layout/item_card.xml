<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardOffer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="6dp"
    app:cardCornerRadius="16dp"
    android:backgroundTint="#f8f8f8"
    app:cardElevation="4dp"
    android:layoutDirection="rtl">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <!-- صورة دائرية الزوايا -->
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/itemImage"
            android:layout_width="match_parent"
            android:layout_height="199dp"
            android:scaleType="centerCrop"
            android:src="@drawable/flour"
            app:shapeAppearanceOverlay="@style/RoundedImageView"
            android:layout_marginBottom="8dp" />

        <!-- صف: اسم المنتج ووقت النشر -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="4dp"
            android:paddingStart="8dp">

            <TextView
                android:id="@+id/itemTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="سماعات بلوتوث"
                android:textColor="@color/blackDark"
                android:textStyle="bold"
                android:textSize="14sp"
                android:padding="8dp"/>

            <TextView
                android:id="@+id/itemTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="منذ 3 ساعات"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:paddingEnd="8dp"/>
        </LinearLayout>

        <!-- للبدل على -->
        <TextView
            android:id="@+id/itemExchange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="للتبديل على: طحين"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:layout_marginBottom="4dp"
            android:paddingStart="17dp"/>

        <!-- الموقع مع أيقونة -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingStart="8dp"
            android:paddingBottom="8dp"
            >

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/location"
                android:layout_marginEnd="4dp" />

            <TextView
                android:id="@+id/itemLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="غزة - الرمال"
                android:textColor="@color/YellowDark"
                android:textSize="12sp" />
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
